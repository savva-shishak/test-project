.container-window
    position fixed
    top 0
    width 100%
    height 100%
    background-color rgba(0, 0, 0, 0.5)
    overflow hidden
    transition 400ms
    z-index 2
    
    display flex
    justify-content center
    align-items center

    .window
        padding 20px
        background-color #ffffff
        color black
        font-weight: 700
        max-width 320px
        cursor pointer

.container-window.hidden
    height 0
    

