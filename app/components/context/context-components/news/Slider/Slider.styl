.row-news
    height 74px
    width 100%

    display flex
    flex-flow row wrap
    align-items center
    justify-content space-around

    img[alr="arrow"]
        cursor pointer
        transition 350ms
    
        &:active
            opacity .5

    .posts
        overflow hidden
        div
            width: 1100px
            .row
                width 100%
                height 75px
                overflow hidden

                .slide.active
                    // анимация
                    transform: translateX(0)
                    opacity 1

                .slide.left
                    transform: translateX(-5%)
                    position: absolute
                
                // .slide.right
                //     transform: translateX(10%)
                //     position: absolute

                .slide
                    // анимация
                    transform: translateX(5%)
                    opacity 0
                    transition 400ms

                    display flex
                    flex-flow row nowrap
                    align-items center
                    overflow hidden
                    justify-content space-between
                    overflow hidden
                    position: absolute
                    
                    .post 
                        width 280px
                        display flex
                        justify-content: space-between
                        flex-flow column row
                        img.post-img
                            height 74px
                            width 74px
                        
                        span 
                            display flex
                            flex-flow row wrap
                            justify-content flex-start
                            position relative

                            color: #a4a8b6;
                            font-family: "Roboto";
                            font-size: 11px;
                            font-weight: 400;
                            line-height: 20px;
                            letter-spacing: 0.55px;

                            width: 186px

                            h5
                                margin 0
                                padding 0

                                color: #1a273e;
                                font-family: "Roboto";
                                font-size: 11px;
                                font-weight: 700;
                                line-height: 20px;
                                text-transform: uppercase;
                                letter-spacing: 1.1px;

                                width 100%

                            img[alt="clock"]
                                height 10px
                                width 10px
                                margin 4px
    .control
        width 100%
        height 45px

        display flex
        justify-content center
        align-items: center

        input
            display none

        span 
            height 4px
            width 4px
            background-color #a4a8b6
            margin 0 6px
            cursor pointer
        
        span.active
            height 8px
            width 8px
            background-color #64697e
