.profile
    width 400px
    padding 0
    margin 100px 0 80px

    span.light 
        color #1a273e
        font-family 'Fira Sans Condensed', sans-serif
        font-size 12px
        font-weight 400
        line-height 15px
        padding 0 5px
        background-color #ffffff

    h1
        text-shadow 0 0 5px rgba(0, 16, 16, 0.5)
        color #ffffff
        font-family 'Roboto', sans-serif
        font-size 45px
        font-weight 600
        line-height 45px
        text-transform uppercase
    
    h2
        width 350px
        color #1a273e
        font-size 28px
        font-family 'Noto Sans', sans-serif
        font-weight 100
        line-height 56px
        text-transform uppercase
        
        span 
            padding 8px
            background-color #fadb44

        span.bold
            font-weight 700
    button
        margin-top 20px
        width 240px
        height 35px
        
        background #fadb44
        background-image url('images/buttonBackground.png')
        
        border 4px solid #ffffff
        border-radius 17px

        font-family: 'Roboto';
        font-size: 10px;
        font-weight: 400;
        line-height: 22px;
        text-transform: uppercase;
        
        letter-spacing: 1px;

    